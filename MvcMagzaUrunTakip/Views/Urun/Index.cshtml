@using MvcMagzaUrunTakip.Models.Entity
@model List<Tbl_Urunler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p>
        Ürün Adı: @Html.TextBox("arama")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Ad</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UrunID</td>
            <td>@item.UrunAd</td>
            <td>@item.UrunMarka</td>
            <td>@item.UrunStok</td>
            <td>@item.UrunAlisFiyat</td>
            <td>@item.UrunSatisFiyat</td>
            <td>@item.Tbl_Kategori.KategoriAd</td>
            <td>@item.UrunDurum</td>
            <td>
                <a href="/Urun/Sil/@item.UrunID" class="btn btn-danger">Sil</a>
                <a href="/Urun/Güncelle/@item.UrunID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>

    }
</table>
<a href="/Urun/Yeni/" class="btn btn-primary">Yeni Ürün</a>

